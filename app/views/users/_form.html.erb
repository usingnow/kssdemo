<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :name %>
    <%= f.input :gender %>
    <%= f.input :mobile %>
    <%= f.input :email %>
    <%= f.input :card_id %>
    <%= f.input :credit %>
    <%= f.input :identity_id %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
